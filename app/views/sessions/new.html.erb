<div class="logo-img-session">
    <%= image_tag("logo.svg")%>
</div>
<div class="row sessions__block1">
    <div class="col-md-6 offset-md-3">
        <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
        <%= f.email_field :email, placeholder: "メールアドレス" %>
        <%= f.password_field :password, placeholder: "パスワード"%>
        <%= f.submit "ログイン" , class: 'btn btn-primary'%>
        <% end %>
        <hr>
        <%= link_to 'ゲストログイン', users_guest_login_path, method: :post, class: 'btn btn-secondary w-100'%>
    </div>
</div>